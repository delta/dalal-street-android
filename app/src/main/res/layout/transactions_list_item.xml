<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transactions_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/transactionCompany_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textAllCaps="true"
        android:text="@string/company"
        android:textColor="@color/neutral_font_color"
        android:fontFamily="@font/kreon_light"
        android:textSize="19sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/transactionType_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Type : Exchange"
        android:layout_gravity="center"
        android:textColor="@color/neutral_font_color"
        android:fontFamily="@font/kreon_light"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/noOfStocks_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Quantity : 10"
        android:layout_gravity="center"
        android:textColor="@color/neutral_font_color"
        android:fontFamily="@font/kreon_light"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/stockPrice_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/stock_price"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neutral_font_color"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/total_price_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/stock_price"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neutral_font_color"
        android:textSize="17sp"
        android:layout_marginBottom="5dp"/>

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time"
        android:layout_gravity="center"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neutral_font_color"
        android:textSize="17sp"
        android:layout_marginBottom="10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height=".3dp"
        android:background="#616161"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"/>

</LinearLayout>


