<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black_background"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/transactionCompany_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/kreon_light"
        android:textAllCaps="true"
        android:textColor="@color/neutral_font_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/transactionType_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/transactionCompany_textView"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neutral_font_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/noOfStocks_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/transactionType_textView"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neutral_font_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/time_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noOfStocks_textView"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neutral_font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/buySell_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="6dp"
        android:text=""
        android:gravity="center"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neon_green"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/green_buy_circle"
        android:layout_alignParentTop="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/time_textView"
        android:background="@color/divider_line_gray" />

</RelativeLayout>
