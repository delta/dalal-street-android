<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:elevation="10dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="5dp">

    <RelativeLayout
        android:id="@+id/list_item_relativeLayout"
        android:layout_width="match_parent"
        android:background="#fff"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@+id/transactionType_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="12dp"
            android:text="Transaction Type"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/transactionCompany_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transactionType_textView"
            android:layout_marginStart="12dp"
            android:text="Company"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/noOfStocks_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/transactionCompany_textView"
            android:layout_marginStart="12dp"
            android:text="Number of stocks"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/stockPrice_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/noOfStocks_textView"
            android:layout_marginStart="12dp"
            android:text="Stock price"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/stockPrice_textView"
            android:layout_marginStart="12dp"
            android:text="Time"
            android:textColor="@android:color/background_dark"
            android:textSize="16sp" />

       <!-- <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/time_textView"
            android:layout_marginTop="10dp"
            android:background="@android:color/background_dark" />
-->
    </RelativeLayout>

</android.support.v7.widget.CardView>
