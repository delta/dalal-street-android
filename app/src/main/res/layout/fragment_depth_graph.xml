<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/black_background">

    <com.weiwangcn.betterspinner.library.material.MaterialBetterSpinner
        android:id="@+id/graph_company_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/kreon_light"
        android:hint="@string/pick_a_company"
        app:met_baseColor="@color/neutral_font_color"
        app:met_floatingLabel="normal"
        app:met_primaryColor="@color/neutral_font_color"
        app:met_textColor="@color/neutral_font_color"
        app:met_textColorHint="@color/neutral_font_color"
        app:met_underlineColor="@color/neutral_font_color" />

    <RelativeLayout
        android:id="@+id/graph_current_stock_price_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="invisible">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TextView
                android:id="@+id/graph_current_stock_price_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:fontFamily="@font/kreon_light"
                android:textColor="@color/neutral_font_color"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/graph_prev_day_close_stock_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/current_stock_price_textView"
                android:layout_toEndOf="@+id/current_stock_price_textView"
                android:fontFamily="@font/kreon_light"
                android:textColor="#BDBDBD"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/graph_arrow_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:layout_toEndOf="@+id/prev_day_close_stock_price"
                android:contentDescription="@string/company_profile"
                android:src="@drawable/down_arrow" />

        </RelativeLayout>

    </RelativeLayout>


    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/market_depth_chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_background"/>

</LinearLayout>
