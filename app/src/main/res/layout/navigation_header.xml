<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="@dimen/nav_header_height"
    android:background="@raw/dalalcover2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/username_textView"
        android:layout_marginStart="16dp"
        android:text="@string/app_name"
        android:fontFamily="@font/marcellus_sc"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/neon_green" />

    <TextView
        android:id="@+id/username_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="16dp"
        android:text="@string/username"
        android:textSize="20sp"
        android:fontFamily="@font/kreon_light"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/neon_blue" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/neutral_font_color"
        android:layout_marginBottom="2dp"
        android:textSize="12sp"
        android:text="@string/made_with_u2661_by_delta_force"/>

</RelativeLayout>
