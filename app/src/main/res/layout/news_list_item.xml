<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/news_layout"
    android:background="@color/black_background">

    <TextView
        android:id="@+id/news_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/marcellus"
        android:textColor="#FFA500"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/news_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/news_head"
        android:layout_marginStart="6dp"
        android:layout_marginTop="6dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:scrollHorizontally="true"
        android:fontFamily="@font/kreon_light"
        android:textColor="@color/neutral_font_color"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/createdAt_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="2dp"
        android:textColor="@color/neutral_font_color"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.75dp"
        android:layout_below="@+id/news_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:background="@color/divider_line_gray" />

</RelativeLayout>
